COMPONENT frontend service
ROUTE -m GET *

FROM node:alpine AS build1
ENV NODE_ENV production
COPY package*.json  ./
RUN npm install

FROM node:alpine AS build2
ENV NODE_ENV production
COPY --from=build1 . .
COPY webpack*.js ./
COPY /public ./public
COPY /src ./src
RUN npm run build

FROM nginx:alpine
COPY --from=build2 /dist /usr/share/nginx/html
ENTRYPOINT ["nginx", "-g", "daemon off;"]
